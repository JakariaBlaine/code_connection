<link href="https://fonts.googleapis.com/css?family=Kranky" rel="stylesheet">
<!-- Static navbar -->
<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <span><%= link_to image_tag("https://cloud.githubusercontent.com/assets/25189972/23142797/c240f1d6-f78b-11e6-8a86-24c99b6b2e3a.png", id: 'icon'), root_path,  class: "navbar-brand" %></span>
    </div>

    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">

